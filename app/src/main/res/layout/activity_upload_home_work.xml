<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@drawable/sensation"
    android:orientation="vertical"
    tools:context=".SubjectHistoryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout3"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:visibility="visible"
            app:boxBackgroundColor="@color/white"
            app:hintTextColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_height="wrap_content"

            >

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/a_select_year_and_sem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textColorHint="@color/black"

                android:fontFamily="@font/saif"
                android:hint="Select Year And Semester"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout33"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:visibility="visible"
            app:boxBackgroundColor="@color/white"
            app:hintTextColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_height="wrap_content"

            >

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/a_select_subject"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/saif"
                android:hint="Select Subject"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout333"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:visibility="visible"
            app:boxBackgroundColor="@color/white"
            app:hintTextColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_height="wrap_content"

            >

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/a_select_unit"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/saif"
                android:hint="Select Unit"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/white"
            app:hintTextColor="@color/black"
            android:textColorHint="@color/black"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/e_topic"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:visibility="visible"
                android:fontFamily="@font/saif"
                android:layout_height="wrap_content"
                android:hint="Enter the HomeWork Name" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout1333"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:visibility="visible"
            app:boxBackgroundColor="@color/white"
            app:hintTextColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_height="wrap_content"

            >

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/a_select_topic"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_height="match_parent"
                android:fontFamily="@font/saif"
                android:hint="Select Topic"/>

        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white"
                app:hintTextColor="@color/black"
                android:textColorHint="@color/black"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/e_questions"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:visibility="visible"
                    android:fontFamily="@font/saif"
                    android:layout_height="wrap_content"
                    android:hint="Enter the Start Date" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_weight="2"
                android:text="+"
                android:textColor="@color/white"
                android:visibility="visible"
                android:textSize="25sp"
                android:id="@+id/b_plus"
                android:layout_height="80dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white"
                app:hintTextColor="@color/black"
                android:textColorHint="@color/black"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/e_end_date"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:visibility="visible"
                    android:fontFamily="@font/saif"
                    android:layout_height="wrap_content"
                    android:hint="Enter the End Date" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_weight="2"
                android:text="+"
                android:textColor="@color/white"
                android:visibility="visible"
                android:textSize="25sp"
                android:id="@+id/b_plus_plus"
                android:layout_height="80dp"/>
        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:textColorHint="@color/white"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"

            >

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/a_see_questions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/saif"
                android:hint="See The Questions"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:textColorHint="@color/white"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/e_video_link"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"

                android:visibility="visible"
                android:fontFamily="@font/saif"
                android:layout_height="wrap_content"
                android:hint="Enter the End Date" />
        </com.google.android.material.textfield.TextInputLayout>
<com.google.android.material.button.MaterialButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
    android:text="Upload"
    android:layout_gravity="center"
    android:id="@+id/b_upload"/>
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="gone"
            android:layout_gravity="center"
            />
    </LinearLayout>





</LinearLayout>