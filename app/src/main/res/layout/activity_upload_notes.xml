<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@drawable/sensation"
    android:orientation="vertical"
    tools:context=".SubjectHistoryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Notes"
        android:id="@+id/btn_notes"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_margin="15dp"
        android:layout_height="wrap_content"
        android:text="Imp Questions"
        android:id="@+id/btn_questions"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/ll_main"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:text="Acknowledgement"
            android:id="@+id/btn_acknowledgement"
            android:layout_height="wrap_content"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout3"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"

            app:boxBackgroundColor="@color/white"
            app:hintTextColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_height="wrap_content"

            >

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/a_select_year_and_sem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textColorHint="@color/black"

                android:fontFamily="@font/saif"
                android:hint="Select Year And Semester"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout33"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            app:boxBackgroundColor="@color/white"
            app:hintTextColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_height="wrap_content"

            >

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/a_select_subject"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/saif"
                android:hint="Select Subject"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout333"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            app:boxBackgroundColor="@color/white"
            app:hintTextColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_height="wrap_content"

            >

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/a_select_unit"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/saif"
                android:hint="Select Unit"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/white"
            app:hintTextColor="@color/black"
            android:textColorHint="@color/black"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/e_topic"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:visibility="visible"
                android:fontFamily="@font/saif"
                android:layout_height="wrap_content"
                android:hint="Enter the Topic" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout1333"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            app:boxBackgroundColor="@color/white"
            app:hintTextColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_height="wrap_content"

            >

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/a_select_level"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/saif"
                android:hint="Select Level"/>

        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white"
                app:hintTextColor="@color/black"
                android:textColorHint="@color/black"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/e_questions"
                    style="@style/Widget.Design.TextInputLayout"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:visibility="visible"
                    android:fontFamily="@font/saif"
                    android:layout_height="wrap_content"
                    android:hint="Enter the Question" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_weight="2"
                android:text="+"


                android:textColor="@color/white"
                android:textSize="30sp"
                android:id="@+id/b_plus"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            app:boxBackgroundColor="@color/white"
            app:hintTextColor="@color/black"
            android:textColorHint="@color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            >

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/a_see_questions"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_height="match_parent"
                android:fontFamily="@font/saif"
                android:hint="See The Questions"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            app:boxBackgroundColor="@color/white"
            android:id="@+id/textInputLayoutT"
            app:hintTextColor="@color/black"
            android:textColorHint="@color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/e_video_link"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:visibility="visible"
                android:fontFamily="@font/saif"
                android:layout_height="wrap_content"
                android:hint="Enter the Video Link" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"

            style="@style/Widget.MaterialComponents.Button"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Attendance"
            android:fontFamily="@font/saif"
            android:id="@+id/b_attendance"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Upload"
            android:fontFamily="@font/saif"
            android:id="@+id/b_upload"
            />
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="gone"
            android:layout_gravity="center"
            />
    </LinearLayout>

</LinearLayout>





































