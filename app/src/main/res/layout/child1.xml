<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@drawable/button_normal"
    android:padding="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"

    android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        style="@style/Widget.MaterialComponents.TextView"
        android:fontFamily="@font/saif"

        android:textColor="	#F0FFF0"
        android:focusable="false"
        android:backgroundTint="#FF5722"
        android:textSize="12sp"
        android:gravity="start"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/parent_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintVertical_bias="0.499"/>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:icon="@drawable/plus"
        app:iconGravity="end"

        app:rippleColor="@null"
        android:clickable="false"
        android:visibility="gone"
        android:focusable="false"
        android:layout_width="50dp"
        android:layout_height="wrap_content" android:id="@+id/materialButton"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.499"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:focusable="false"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/materialButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/parent_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

</androidx.constraintlayout.widget.ConstraintLayout>