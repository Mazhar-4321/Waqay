<resources>
    <!-- Base application theme. -->
    <style name="AppMaterialTheme" parent="AppTheme"></style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/purple_200</item>
        <item name="fontFamily">@font/opensans_bold</item>
    </style>
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/saif</item>
    </style>
    <style name="AppTheme.GenderChip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">@font/saif</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
    </style>
</resources>